{
  "account": "123456789012",
  "region": "us-east-1",
  "environment": "development",
  "project": {
    "name": "serverless-payments-sandbox",
    "description": "Serverless Payments Sandbox - Complete infrastructure for payment simulation"
  },
  "api": {
    "stage": "v1",
    "rate_limit": 100,
    "burst_limit": 200,
    "daily_quota": 10000
  },
  "lambda": {
    "timeout": 30,
    "memory_size": 512,
    "runtime": "python3.12"
  },
  "dynamodb": {
    "billing_mode": "PAY_PER_REQUEST",
    "ttl_days": 30,
    "point_in_time_recovery": true
  },
  "monitoring": {
    "log_retention_days": 7,
    "cost_alert_threshold": 10
  }
} 